<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.trylma.client.controller.ConnectionController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Server IP:" />
    <TextField fx:id="serverIpField" promptText="Enter server IP" />

    <Label text="Port:" />
    <TextField fx:id="portField" promptText="Enter port" />

    <Button onAction="#handleConnect" text="Connect" />
</VBox>