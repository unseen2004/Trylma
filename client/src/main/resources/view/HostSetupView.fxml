<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.trylma.client.controller.HostSetupController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Game Type:" />
    <ComboBox fx:id="gameTypeComboBox" promptText="Select Game Type" />

    <Label text="Player Count:" />
    <ComboBox fx:id="playerCountComboBox" promptText="Select Player Count" />

    <Button fx:id="startGameButton" onAction="#startGame" text="Start Game" />

    <Label fx:id="connectedPlayersLabel" text="Connected Players: 0" />
</VBox>